<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/taxpot_yellow</item>
        <item name="colorPrimaryDark">@color/taxpot_dark</item>
        <item name="colorAccent">@color/taxpot_accent</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="StartupTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAppearance">@android:style/Theme.DeviceDefault</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>
